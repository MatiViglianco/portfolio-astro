---

import CertificationItem from './CertificationItem.astro';


const CERTIFICATIONS = [
    { id_prefix: 'cert1', title: 'Análisis de Datos de Google', issuer: 'Coursera (sept. 2024)' },
    { id_prefix: 'cert2', title: 'Arquitectura Software Moderna', issuer: 'Udemy (mar. 2024)' },
    { id_prefix: 'cert3', title: 'Principios SOLID y Clean Code', issuer: 'Udemy (mar. 2024)' },
    { id_prefix: 'cert4', title: 'Typescript: Desde las Bases', issuer: 'Udemy (dic. 2023)' },
    { id_prefix: 'cert5', title: 'AWS Cloud Technical Essentials', issuer: 'Coursera (feb. 2023)' },
    { id_prefix: 'cert6', title: 'Google Cloud: Bits y Bytes de Redes', issuer: 'Coursera (oct. 2023)' },
    { id_prefix: 'cert7', title: 'EF SET 44/100 (B1 Intermediate)', issuer: 'EF SET (jun. 2024)' },
    { id_prefix: 'cert8', title: 'Backend 1: Introducción a Java', issuer: 'Egg (may. 2023)' },
    { id_prefix: 'cert9', title: 'React Js', issuer: 'Coderhouse (sept. 2022)' },
];
---
<section id="certifications" class="py-20">
    <h2 class="section-title text-3xl font-bold text-white mb-12 flex items-center reveal-on-scroll" data-translate="certifications_title">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 18.75h-9a9 9 0 119 0zM16.5 18.75a9 9 0 00-9 0m9 0a9 9 0 01-9 0m9 0h-9m9 0h-9" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75a3 3 0 116 0 3 3 0 01-6 0z" />
        </svg>
        Licencias y Certificaciones
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {CERTIFICATIONS.map(cert => (
            <CertificationItem {...cert} />
        ))}
    </div>
</section>