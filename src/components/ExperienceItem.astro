---
// src/components/ExperienceItem.astro
interface Props {
  date: string;
  title: string;
  company: string;
  descriptions: string[];
  id_prefix: string;
}

const { date, title, company, descriptions, id_prefix } = Astro.props;
---
<div class="relative">
    <div class="absolute -left-[46px] top-1.5 h-4 w-4 rounded-full bg-purple-500 ring-8 ring-slate-950"></div>
    <p class="text-sm font-medium text-purple-400" data-translate={`${id_prefix}_date`}>{date}</p>
    <h3 class="text-xl font-bold text-white mt-1" data-translate={`${id_prefix}_title`}>{title}</h3>
    <p class="text-md text-gray-400">{company}</p>
    <ul class="mt-4 space-y-2 text-gray-300 list-disc list-inside">
        {descriptions.map((desc, index) => (
            <li data-translate={`${id_prefix}_desc${index + 1}`}>{desc}</li>
        ))}
    </ul>
</div>
