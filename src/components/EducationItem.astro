---
// src/components/EducationItem.astro
interface Props {
  title: string;
  school: string;
  id_prefix: string;
}

const { title, school, id_prefix } = Astro.props;
---
<div class="card-education p-4 rounded-lg transition-transform duration-300 hover:-translate-y-1 reveal-on-scroll">
    <p class="font-bold text-white" data-translate={`${id_prefix}_title`}>{title}</p>
    <p class="text-gray-400" data-translate={`${id_prefix}_school`}>{school}</p>
</div>
